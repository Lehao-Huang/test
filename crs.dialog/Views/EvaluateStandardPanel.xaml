<UserControl x:Class="crs.dialog.Views.EvaluateStandardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:controls="clr-namespace:crs.extension.Controls;assembly=crs.extension"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:crs.extension.Models;assembly=crs.extension"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:crs.dialog.ViewModels"
             xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                              Type={x:Type vm:EvaluateStandardPanelViewModel}}"
             d:Height="1080"
             d:Width="1920"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Tag" Value="Wrong" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Width="46" Height="46">
                            <Image x:Name="image" Source="{StaticResource crs_错-未选中}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="image" Property="Source" Value="{StaticResource crs_错-选中}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Right">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border Width="46" Height="46">
                                    <Image x:Name="image" Source="{StaticResource crs_对-未选中}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="image" Property="Source" Value="{StaticResource crs_对-选中}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="AnswerTemplate">
            <StackPanel d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type models:AnswerItem}}" Orientation="Horizontal">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction PropertyName="IsUse"
                                                        TargetObject="{Binding}"
                                                        Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>

                <RadioButton Margin="0,0,10,0"
                             Effect="{StaticResource EffectShadow1}"
                             GroupName="{Binding GroupName}"
                             IsChecked="{Binding IsWrong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Wrong" />
                <RadioButton Margin="10,0,0,0"
                             Effect="{StaticResource EffectShadow1}"
                             GroupName="{Binding GroupName}"
                             IsChecked="{Binding IsRight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Right" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="Null" />

