<local:BaseUserControl x:Class="crs.game.Games.眼动训练"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:crs.game"
                       Height="450" Width="800"
Background="#79b63f">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>

            <RowDefinition/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="请选出您认为最符合的下一项" Grid.Row="1" Height="auto" FontSize="25" Grid.Column="1"/>
        <Border Background="#e8f1dc" Grid.Column="1" Grid.Row="1"/>
        <Grid x:Name="ImageGrid" Grid.Column="1" Grid.Row="1">

            <Image x:Name="image"/>

        </Grid>
        <TextBlock Text="请根据目标在参考点的位置按下左箭头或右箭头" Grid.Row="1" Height="auto" FontSize="25" Grid.Column="1"/>
    </Grid>
</local:BaseUserControl>

