<local:BaseUserControl x:Class="crs.game.Games.逻辑思维能力"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:crs.game"
                       Height="720" Width="1280"        
Background="#79b63f">
    <Grid Margin="40" Background="#d0e3b6">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="2*"/>

            <RowDefinition />
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="请选出您认为最符合的下一项" Grid.Row="0" Height="auto" FontSize="25"/>
        <WrapPanel x:Name="ImagePanel" Grid.Row="1" Margin="10" HorizontalAlignment="Stretch" Orientation="Horizontal">


        </WrapPanel>
        <WrapPanel x:Name="ButtonPanel" Orientation="Horizontal" Grid.Row="2" Margin="10"/>
        <Button Grid.Row="3" Content="确认" Height="auto" FontSize="40" HorizontalAlignment="Left" Width="100" Click="Confirm_Button_Click" Margin="0,10,0,-24"/>
        <Border/>
    </Grid>
</local:BaseUserControl>

